rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Users collection - users can only read/write their own data
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isOwner(userId);
    }
    
    // Crops collection - Anyone can read, only authenticated can write
    match /crops/{cropId} {
      allow read: if true;  // Public read access for browsing crops
      
      // For DEVELOPMENT: Allow all writes (comment out for production)
      allow write: if true;
      
      // For PRODUCTION: Uncomment these rules when phone auth is working
      // allow create: if isAuthenticated() && 
      //   request.resource.data.keys().hasAll(['cropName', 'price', 'quantity', 'district']) &&
      //   request.resource.data.price is number &&
      //   request.resource.data.price > 0;
      // 
      // allow update: if isAuthenticated() && 
      //   (request.auth.uid == resource.data.farmerId || 
      //    request.auth.phone_number == resource.data.farmerPhone);
      //
      // allow delete: if isAuthenticated() && 
      //   (request.auth.uid == resource.data.farmerId || 
      //    request.auth.phone_number == resource.data.farmerPhone);
    }
    
    // Orders collection
    match /orders/{orderId} {
      allow read: if true;  // Development mode
      allow write: if true;  // Development mode
      
      // Production rules (uncomment when ready):
      // allow read: if isAuthenticated() && 
      //   (isOwner(resource.data.consumerId) || isOwner(resource.data.farmerId));
      // allow create: if isAuthenticated();
      // allow update: if isAuthenticated() && isOwner(resource.data.consumerId);
      // allow delete: if isAuthenticated() && isOwner(resource.data.consumerId);
    }
    
    // Cart items
    match /cart/{userId}/items/{itemId} {
      allow read, write: if true;  // Development mode
      // Production: allow read, write: if isOwner(userId);
    }
    
    // Resources sharing (if needed)
    match /resources/{resourceId} {
      allow read: if true;
      allow write: if true;  // Development mode
      // Production: allow create: if isAuthenticated();
    }
  }
}
